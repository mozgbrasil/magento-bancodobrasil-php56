<config>
    <modules>
        <Mozg_Bancodobrasil>
            <version>1.0.0</version>
        </Mozg_Bancodobrasil>
    </modules>
    <global>
        <models>
            <mozg_bancodobrasil>
                <class>Mozg_Bancodobrasil_Model</class>
                <resourceModel>mozg_bancodobrasil_resource</resourceModel>
            </mozg_bancodobrasil>
            <mozg_bancodobrasil_resource>
                <class>Mozg_Bancodobrasil_Model_Resource</class>
                <entities>
                    <api_debug>
                        <table>mozg_api_debug</table>
                    </api_debug>
                    <event>
                        <table>mozg_event_data</table>
                    </event>
                    <event_queue>
                        <table>mozg_event_data_queue</table>
                    </event_queue>
                    <order_payment>
                        <table>mozg_order_payment</table>
                    </order_payment>
                </entities>
            </mozg_bancodobrasil_resource>
            <!--<sales>
                <rewrite>
                    <billing_agreement>Mozg_Bancodobrasil_Model_Billing_Agreement</billing_agreement>
                </rewrite>
            </sales>
            <sales_resource>
                <rewrite>
                    <billing_agreement>Mozg_Bancodobrasil_Model_Resource_Billing_Agreement</billing_agreement>
                    <billing_agreement_collection>Mozg_Bancodobrasil_Model_Resource_Billing_Agreement_Collection</billing_agreement_collection>
                </rewrite>
            </sales_resource>-->
        </models>
        <helpers>
            <mozg_bancodobrasil>
                <class>Mozg_Bancodobrasil_Helper</class>
            </mozg_bancodobrasil>
            <payment>
                <rewrite>
                    <data>Mozg_Bancodobrasil_Helper_Payment_Data</data>
                </rewrite>
            </payment>
        </helpers>
        <resources>
            <mozg_bancodobrasil_setup>
                <setup>
                    <module>Mozg_Bancodobrasil</module>
                    <class>Mozg_Bancodobrasil_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mozg_bancodobrasil_setup>
            <mozg_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mozg_write>
            <mozg_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mozg_read>
        </resources>
        <blocks>
            <mozg_bancodobrasil>
                <class>Mozg_Bancodobrasil_Block</class>
            </mozg_bancodobrasil>
            <sales>
                <rewrite>
                    <adminhtml_billing_agreement_grid>Mozg_Bancodobrasil_Block_Adminhtml_Sales_Billing_Agreement_Grid</adminhtml_billing_agreement_grid>
                </rewrite>
            </sales>
        </blocks>
        <events>
            <!--<sales_order_payment_capture>
                <observers>
                    <mozg_bancodobrasil_payment_capture>
                        <class>mozg_bancodobrasil/observer</class>
                        <method>addCurrentInvoiceToPayment</method>
                    </mozg_bancodobrasil_payment_capture>
                </observers>
            </sales_order_payment_capture>
