                    </mozg_bancodobrasil_comercioeletronico_hpp>
                    <mozg_bancodobrasil_billing_agreement>
                        <class>mozg_bancodobrasil/billing_agreement_observer</class>
                        <method>addMethodsToConfig</method>
                    </mozg_bancodobrasil_billing_agreement>
                </observers>
            </controller_action_predispatch>
            <sales_order_shipment_save_after>
                <observers>
                    <mozg_bancodobrasil_capture_invoice_on_shipment>
                        <class>mozg_bancodobrasil/observer</class>
                        <method>captureInvoiceOnShipment</method>
                    </mozg_bancodobrasil_capture_invoice_on_shipment>
                </observers>
            </sales_order_shipment_save_after>-->
        </events>
    </global>
    <frontend>
        <secure_url>
            <mozg_process>/mozg_bancodobrasil/process</mozg_process>
        </secure_url>
        <routers>
            <mozg_bancodobrasil>
                <use>standard</use>
                <args>
                    <module>Mozg_Bancodobrasil</module>
                    <frontName>mozg_bancodobrasil</frontName>
                </args>
            </mozg_bancodobrasil>
        </routers>
        <translate>
            <modules>
                <Mozg_Bancodobrasil>
                    <files>
                        <default>Mozg_Bancodobrasil.csv</default>
                    </files>
                </Mozg_Bancodobrasil>
            </modules>
        </translate>
        <layout>
            <updates>
                <mozg_bancodobrasil>
                    <file>mozg_bancodobrasil.xml</file>
                </mozg_bancodobrasil>
            </updates>
        </layout>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <mozg_bancodobrasil_checkout_onepage_controller_success_action>
                        <class>mozg_bancodobrasil/observer</class>
                        <method>checkoutSuccess</method>
                    </mozg_bancodobrasil_checkout_onepage_controller_success_action>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Mozg_Bancodobrasil before="Mage_Adminhtml">Mozg_Bancodobrasil_Adminhtml</Mozg_Bancodobrasil>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <mozg_bancodobrasil>
                    <file>mozg_bancodobrasil.xml</file>
                </mozg_bancodobrasil>
            </updates>
        </layout>
        <translate>
            <modules>
                <Mozg_Bancodobrasil>
                    <files>
                        <default>Mozg_Bancodobrasil.csv</default>
                    </files>
                </Mozg_Bancodobrasil>
            </modules>
        </translate>
        <events>
            <sales_order_payment_cancel>
                <observers>
                    <mozg_bancodobrasil_sales_order_payment_cancel>
                        <class>mozg_bancodobrasil/observer</class>
                        <method>salesOrderPaymentCancel</method>
                    </mozg_bancodobrasil_sales_order_payment_cancel>
                </observers>
            </sales_order_payment_cancel>
            <controller_action_postdispatch_adminhtml_sales_order_create_save>
                <observers>
                    <mozg_bancodobrasil_controller_action_postdispatch_adminhtml_sales_order_create_save>
                        <class>mozg_bancodobrasil/observer</class>
                        <method>adminSalesOrderCreateSave</method>
                    </mozg_bancodobrasil_controller_action_postdispatch_adminhtml_sales_order_create_save>
                </observers>
            </controller_action_postdispatch_adminhtml_sales_order_create_save>
        </events>
    </adminhtml>
    <default>
        <payment>
            <mozg_bancodobrasil_abstract>
                <active>0</active>
                <sort_order>6000</sort_order>
                <debug>1</debug>
                <demoMode>Y</demoMode>
                <capture_mode>auto</capture_mode>
                <order_status>pending</order_status>
                <payment_pre_authorized></payment_pre_authorized>
                <payment_authorized>processing</payment_authorized>
                <payment_cancelled>holded</payment_cancelled>
                <payment_authorized_virtual>complete</payment_authorized_virtual>
                <refund_authorized>closed</refund_authorized>
                <refund_partial_authorized>processing</refund_partial_authorized>
                <pending_status>pending_payment</pending_status>
                <create_pending_invoice>0</create_pending_invoice>
                <capture_on_shipment>0</capture_on_shipment>
                <uncancelorder>1</uncancelorder>
                <autorefundoncancel>1</autorefundoncancel>
                <send_invoice_update_mail>1</send_invoice_update_mail>
                <send_update_mail>1</send_update_mail>
                <ignore_refund_notification>0</ignore_refund_notification>
                <!--<recurringtypes>ONECLICK</recurringtypes>-->
                <payment_cancelled_redirect>checkout/cart</payment_cancelled_redirect>
                <title_renderer>title_image</title_renderer>
                <shopperlocale></shopperlocale>
                <countryCode></countryCode>
                <split_payments_refund_strategy>1</split_payments_refund_strategy>
                <idConv>303258</idConv>
                <refTran></refTran>
                <vencimento>5</vencimento>
                <msgLoja>- Sr. Caixa, cobrar multa de 2% após o vencimento
- Receber até 10 dias após o vencimento
- Em caso de dúvidas entre em contato conosco: acme@acme.com.br - Tel .: (99) 9999-9999</msgLoja>
                <tpDuplicata>DM</tpDuplicata>
            </mozg_bancodobrasil_abstract>
            <mozg_bancodobrasil_comercioeletronico_bb translate="title" module="mozg_bancodobrasil">
                <active>0</active>
                <sort_order>6040</sort_order>
                <title>Banco do Brasil (Todas as opções) (powered by MOZG)</title>
                <model>mozg_bancodobrasil/method_comercioeletronico_bb</model>
                <group>mozg_payment</group>                
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <disable_hpptypes>1</disable_hpptypes>
            </mozg_bancodobrasil_comercioeletronico_bb>
            <mozg_bancodobrasil_comercioeletronico_boleto translate="title" module="mozg_bancodobrasil">
                <active>0</active>
                <sort_order>6050</sort_order>
                <title>Boleto Banco do Brasil (powered by MOZG)</title>
                <model>mozg_bancodobrasil/method_comercioeletronico_boleto</model>
                <group>mozg_payment</group>                
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <visible_type>both</visible_type>
                <order_underpaid_status></order_underpaid_status>
                <order_overpaid_status></order_overpaid_status>
            </mozg_bancodobrasil_comercioeletronico_boleto>
            <mozg_bancodobrasil_comercioeletronico_eletronictransfer translate="title" module="mozg_bancodobrasil">
                <active>0</active>
                <sort_order>6060</sort_order>
                <title>Transferência Eletrônica Banco do Brasil (powered by MOZG)</title>
                <model>mozg_bancodobrasil/method_comercioeletronico_eletronicTransfer</model>
                <group>mozg_payment</group>                
                <debug>1</debug>
                <allowspecific>1</allowspecific>
                <specificcountry>BR</specificcountry>
                <visible_type>both</visible_type>
                <order_underpaid_status></order_underpaid_status>
                <order_overpaid_status></order_overpaid_status>
            </mozg_bancodobrasil_comercioeletronico_eletronictransfer>
        </payment>
    </default>
    <crontab>
        <jobs>
            <mozg_bancodobrasil_process_notification_queue>
                <schedule>
                    <cron_expr>*/1 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mozg_bancodobrasil/cronjob::updateNotificationQueue</model>
                </run>
            </mozg_bancodobrasil_process_notification_queue>
            <mozg_bancodobrasil_trigger_notification>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>mozg_bancodobrasil/cronjob::triggerNotification</model>
                </run>
            </mozg_bancodobrasil_trigger_notification>
        </jobs>
    </crontab>
</config>